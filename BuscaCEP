#include <stdio.h>
#include <string.h>

typedef struct _Endereco Endereco;

//registroCEP = struct.Struct("72s72s72s72s2s8s2s");

struct _Endereco
{
	char logradouro[72];
	char bairro[72];
	char cidade[72];
	char uf[72];
	char sigla[2];
	char cep[8];
	char lixo[2]; // Ao Espa√ßo no final da linha + quebra de linha
};

int main(int argc, char**argv){
	FILE *f;
	Endereco e;
	int qt;
	int c;

	/*if(argc != 2)
	{
		fprintf(stderr, "USO: %s [CEP]", argv[0]);
		return 1;
	}*/

	c = 0;
